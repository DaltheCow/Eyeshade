{
  "manifest_version": 2,
  "name": "eyeshade",
  "version": "0.0.0.1",
  "description": "An extension to block as many sites as you want",
  "page_action": {
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["public/background.js"],
    "persistent": false
  },

  "web_accessible_resources": [
    "not_available/not_available.html"
  ],

  "options_page": "options/options.html",

  "permissions": [
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "Eyeshade.png",
    "48": "Eyeshade.png",
    "128": "Eyeshade.png"
  },
  "default_icon": {
    "16": "Eyeshade.png",
    "32": "Eyeshade.png",
    "128": "Eyeshade.png"
  }
}
